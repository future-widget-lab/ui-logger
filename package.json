{
  "name": "@future-widget-lab/logger",
  "version": "0.1.4",
  "description": "A good enough logger for client-side oriented applications.",
  "license": "MIT",
  "author": "Carlos Lobo",
  "main": "dist/index.js",
  "module": "dist/logger.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/future-widget-lab/logger.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "singleAttributePerLine": true,
    "bracketSpacing": true,
    "useTabs": true,
    "singleQuote": true,
    "semi": true,
    "printWidth": 120,
    "tabWidth": 2,
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": true,
    "pluginSearchDirs": false,
    "trailingComma": "none"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/logger.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/logger.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "loglevel": "^1.9.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "@tsconfig/recommended": "^1.0.8",
    "@tsconfig/vite-react": "^3.4.0",
    "@types/qs": "^6.9.18",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.7",
    "size-limit": "^11.1.6",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "logger",
    "logging",
    "loglevel",
    "debugging",
    "debug",
    "log",
    "custom-logger",
    "typescript",
    "emoji-logs",
    "url-debugging",
    "search-params",
    "debug-control",
    "log-formatter"
  ]
}